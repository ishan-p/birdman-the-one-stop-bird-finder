{
    "intents": [
        {
            "intent": "AMAZON.PauseIntent"
        },
        {
            "intent": "AMAZON.ResumeIntent"
        },
        {
            "intent": "AMAZON.CancelIntent"
        },
        {
            "intent": "AMAZON.StopIntent"
        },
        {
            "intent": "GetNotableSpecies",
            "slots": [
                {
                    "name": "Region",
                    "type": "LIST_OF_REGIONS"
                }
            ]
        },
        {
            "intent": "BirdInfo",
            "slots": [
                {
                    "name": "BirdName",
                    "type": "LIST_OF_BIRDS"
                }
            ]
        },
        {
            "intent": "Discover"
        },   
        {
            "intent": "DiscoverNext"      
        },    
        {
            "intent": "DiscoverStop"      
        },       
        {
            "intent": "Help"      
        },       
        {
            "intent": "BinaryResponseQuestion",
            "slots": [
                {
                    "name": "Response",
                    "type": "BINARY_RESPONSES"
                }
            ]
        },      
        {
            "intent": "BirdSound",
            "slots": [
                {
                    "name": "BirdName",
                    "type": "LIST_OF_BIRDS"
                }
            ]
        }
    ]
}
